@model List<IDS325L___ProyectoFinal___Índice_académico.Models.Asignatura>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestionar asignaturas</h1>

<a class="btn btn-danger btn-sm w-25" asp-action="Create" asp-controller="Asignaturas" asp-route-idAsignatura="0">Crear Asignatura</a>

<table class="table">
    <thead>
        <tr>
            <th>Codigo de asignatura</th>
            <th>Área académica</th>
            <th>Creditos</th>
            <th>Nombre de Asignatura</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CodigoAsignatura</td>
                <td>@item.CodigoAreaNavigation.NombreArea</td>
                <td>@item.Credito</td>
                <td>@item.NombreAsignatura</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Create" asp-controller="Asignaturas" asp-route-idAsignatura="@item.IdAsignatura">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Asignaturas" asp-route-idAsignatura="@item.IdAsignatura">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

