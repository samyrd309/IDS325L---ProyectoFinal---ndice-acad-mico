@model IDS325L___ProyectoFinal___Índice_académico.Models.ViewModels.RevisionVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<form asp-controller="Calificacion" asp-action="Create" method="post">
            <input type="hidden" asp-for="oCalificacion.IdCalificacion"/>
