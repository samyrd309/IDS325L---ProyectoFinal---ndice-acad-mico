@model IDS325L___ProyectoFinal___Índice_académico.Models.ViewModels.SeccionVM
@{
    ViewData["Title"] = "Create";
}

@if(Model.oSeccion.IdSeccion == 0)
{
    <h1>Crear Secciones</h1>
}
else{
    <h1> Editar Secciones</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Create" asp-controller="Seccion" method="post">
            <input class="form-control" type="hidden" asp-for="oSeccion.IdSeccion" />
            <div class="mb-2">

                <label class="form-label">Número de la sección</label>
                <input class="form-control" type="text" asp-for="oSeccion.NumeroSeccion" />
            </div>

            <div class="mb-2">
                <label class="form-label">Nombre asignatura</label>
                <select class="form-select form-select-sm" asp-for="oSeccion.IdAsignatura" asp-items="@Model.oAsignatura">
                    <option selected disabled>--Seleccionar--</option>
                </select>
            </div>

            <div class="mb-2">
                 <label class="form-label" >Nombre docente</label>
                <select class="form-select form-select-sm" asp-for="oSeccion.Matricula" asp-items="@Model.oDocente">
                    <option selected disabled>--Seleccionar--</option>
                </select>
            </div>

            @if(Model.oSeccion.IdSeccion == 0)
            {
                <button  onclick="return confirm('¿Seguro que desea realizar esta acción?')" class="btn btn-danger btn-sm w-25" type="submit">Crear</button>
            }
            else
            {
                <button  onclick="return confirm('¿Seguro que desea realizar esta acción?')" class="btn btn-danger btn-sm w-25" type="submit">Actualizar</button>
            }
            <a class="btn btn-danger btn-sm" asp-action="Index" asp-controller="Seccion">Volver</a>

            

        </form>
    </div>
</div>

