@model List<IDS325L___ProyectoFinal___Índice_académico.Models.Seccion>
@{
    ViewData["Title"] = "Index";
}

<h1>Gestionar Secciones</h1>


<a class="btn  btn-danger btn-sm w-25 mt-3 mb-4" asp-action="Create" asp-controller="Seccion" asp-route-IdSeccion="0">Crear secciones </a>


<table class="table">
    <thead>
        <tr>
            <th>Nombre asignatura</th>
            <th>Número sección</th>
            <th>Nombre docente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
               
                <td>@item.IdAsignaturaNavigation.CodigoAsignatura @item.IdAsignaturaNavigation.NombreAsignatura</td>
                <td>@item.NumeroSeccion</td>
                 @if(item.MatriculaNavigation == null)
                {
                    <td>@item.Matricula</td>
                }
                else
                {
                    <td>@item.Matricula - @item.MatriculaNavigation.Nombre @item.MatriculaNavigation.Apellido</td>
                }
                <td>
                    <a class="btn  btn-danger btn-sm" asp-action="Create" asp-controller="Seccion" asp-route-IdSeccion="@item.IdSeccion" asp-route-IdAsignatura="@item.IdAsignatura">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Seccion" asp-route-IdSeccion="@item.IdSeccion" asp-route-IdAsignatura="@item.IdAsignatura">Eliminar</a>
                    <a class="btn  btn-danger btn-sm" asp-action="CreateAsignarEstudiantes" asp-controller="Seccion" asp-route-IdSeccion="@item.IdSeccion" asp-route-IdAsignatura="@item.IdAsignatura">Asignar estudiantes</a>
                </td>
            </tr>
        }
    </tbody>
</table>