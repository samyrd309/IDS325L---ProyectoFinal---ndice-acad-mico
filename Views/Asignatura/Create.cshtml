@model IDS325L___ProyectoFinal___Índice_académico.Models.ViewModels.AsignaturaVM
@{
    ViewData["Title"] = "Create";
}

<h1>Crear Asignatura</h1>


<div class="">
    <div class="col-sm-4">
        <form asp-action="Create" asp-controller="Asignatura" method="post">
            <div class="mb-2"> 
                <label class="form-label" asp-for="oAsignatura.CodigoAsignatura">Clave</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.CodigoAsignatura" type="text"/>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oAsignatura.NombreAsignatura">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.NombreAsignatura" type="text"/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oAsignatura.CodigoArea">Área Académica</label>
                <select class="form-select form-select-sm" asp-for="oAsignatura.CodigoArea" asp-items="@Model.CodigoAreaNavigation">
                    <option selected disabled> --Seleccionar--</option>
                </select>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oAsignatura.Credito">Créditos</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.Credito" type="text"/>
            </div>

            <div class="mb-2"> 
                <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexEstudiantes" asp-controller="Persona">Volver  </a>
             </div>

        </form>
    </div>
</div>