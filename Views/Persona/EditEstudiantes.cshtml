@model IDS325L___ProyectoFinal___Índice_académico.Models.ViewModels.EstudianteVM
@{
    ViewData["Title"] = "EditEstudiantes";
}

<h1>Editar Estudiante</h1>


<div class="">
    <div class="col-sm-4">
        <form asp-action="EditEstudiantes" asp-controller="Persona" method="post">
            <input type="hidden" asp-for="oPersona.Matricula"/>
            <input type="hidden" asp-for="oPersona.Contraseña"/>
            <input type="hidden" asp-for="oPersona.Indice"/>
            <input type="hidden" asp-for="oPersona.FechaIngresoPersona"/>
            <input type="hidden" asp-for="oPersona.VigenciaPersona"/>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oPersona.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oPersona.Nombre" type="text"/>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oPersona.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oPersona.Apellido" type="text"/>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oPersona.oAreaAcademica.CodigoArea">Área Academica</label>
                <select class="form-select form-select-sm" asp-for="oPersona.CodigoArea" asp-items="@Model.oAreaAcademica">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oPersona.oCarrera.CodigoCarrera">Carrera</label>
                <select class="form-select form-select-sm" asp-for="oPersona.Carrera" asp-items="@Model.oCarrera">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-2"> 
                <label class="form-label" asp-for="oPersona.CorreoElectronico">Correo electronico</label>
                <input class="form-control form-control-sm" asp-for="oPersona.CorreoElectronico" type="text"/>
            </div>

            <div class="mb-2"> 
                <button class="btn btn-success btn-sm w-25" type="submit">Actualizar</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexEstudiantes" asp-controller="Persona">Volver  </a>
            </div>

        </form>
    </div>
</div>
