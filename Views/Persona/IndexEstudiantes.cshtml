@model List<IDS325L___ProyectoFinal___Índice_académico.Models.Persona>


<h1>Gestionar estudiantes</h1>

<a class="btn btn-danger btn-sm w-25 mt-2 mb-2 mt-3 mb-4" asp-action="CreateEstudiantes" asp-controller="Persona">Crear Estudiante</a>

<table class="table">
    <thead>
        <tr>
            <th>Matricula</th>
            <th>Carrera</th>
            <th>Área académica</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo electronico</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Matricula</td>
                <td>@item.Carrera</td>
                <td>@item.CodigoArea</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.CorreoElectronico</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="CreateEstudiantes" asp-controller="Persona" asp-route-Matricula="@item.Matricula">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Persona" asp-route-Matricula="@item.Matricula">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

