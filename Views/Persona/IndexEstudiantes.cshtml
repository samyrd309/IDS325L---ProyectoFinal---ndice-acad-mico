@model List<IDS325L___ProyectoFinal___Índice_académico.Models.Persona>

<div class="row">
    <div class="col-6">
        <form asp-action="IndexEstudiantes" asp-controller="Persona" method="post">
            <div class="input-group mb-3">
            
                <input type="text" class="form-control">
                <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
             </div>
         </form>
    </div>
    <div class="col-6">
        <a class="btn btn-success btn-sm" asp-action="CreateEstudiantes" asp-controller="Persona">Crear Estudiante</a>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Matricula</th>
            <th>Carrera</th>
            <th>Área académica</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo electronico</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Matricula</td>
                <td>@item.Carrera</td>
                <td>@item.CodigoArea</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.CorreoElectronico</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="CreateEstudiantes" asp-controller="Persona" asp-route-Matricula="@item.Matricula">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Persona" asp-route-Matricula="@item.Matricula">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>