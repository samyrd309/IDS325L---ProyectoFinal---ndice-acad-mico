@model IDS325L___ProyectoFinal___Índice_académico.Models.ViewModels.DocentesVM
@{
    ViewData["Title"] = "CreateDocentes";
}

@if(Model.oPersona.Matricula == 0)
{
    <h1>Crear Docente</h1>
}
else{
    <h1>Editar Docente</h1>
}


<div class="">
    <div class="col-sm-4">
        <form asp-action="CreateDocentes" asp-controller="Persona" method="post">
            <input type="hidden" asp-for="oPersona.Matricula"/>
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }

            @if(Model.oPersona.Matricula == 0)
            {
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.Nombre">Nombre<span style="color:red">*</span></label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Nombre" type="text"/>
                    <span asp-validation-for="oPersona.Nombre" class="text-danger"></span>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.Apellido">Apellido<span style="color:red">*</span></label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Apellido" type="text"/>
                </div>
                
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.CodigoAreaNavigation.CodigoArea">Área Académica<span style="color:red">*</span></label>
                    <select class="form-select form-select-sm" asp-for="oPersona.CodigoArea" asp-items="@ViewBag.AreaList">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.CarreraNavigation.CodigoCarrera">Carrera</label>
                    <select class="form-select form-select-sm" asp-for="oPersona.Carrera" asp-items="@Model.oCarrera">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.CorreoElectronico">Correo electrónico<span style="color:red">*</span></label>
                    <input class="form-control form-control-sm" asp-for="oPersona.CorreoElectronico" type="text"/>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.Contraseña">Contraseña<span style="color:red">*</span></label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Contraseña" type="text"/>
                </div>
            }
            else
            {
                 <div class="mb-2 d-none"> 
                    <label class="form-label" asp-for="oPersona.Nombre">Nombre</label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Nombre" type="text"/>
                </div>
                <div class="mb-2 d-none"> 
                    <label class="form-label" asp-for="oPersona.Apellido">Apellido</label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Apellido" type="text"/>
                </div>
                
                <div class="mb-2"> 
                    <label class="form-label" asp-for="oPersona.CodigoAreaNavigation.CodigoArea">Area Academica</label>
                    <select class="form-select form-select-sm" asp-for="oPersona.CodigoArea" asp-items="@Model.oAreaAcademica">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2 d-none"> 
                    <label class="form-label" asp-for="oPersona.CarreraNavigation.CodigoCarrera">Carrera</label>
                    <select class="form-select form-select-sm" asp-for="oPersona.Carrera" asp-items="@Model.oCarrera">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2 d-none"> 
                    <label class="form-label" asp-for="oPersona.CorreoElectronico">Correo electronico</label>
                    <input class="form-control form-control-sm" asp-for="oPersona.CorreoElectronico" type="text"/>
                </div>
                <div class="mb-2 d-none"> 
                    <label class="form-label" asp-for="oPersona.Contraseña">Contraseña</label>
                    <input class="form-control form-control-sm" asp-for="oPersona.Contraseña" type="text"/>
                </div>
            }
           

            <div class="mb-2"> 
             @if(Model.oPersona.Matricula == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-success btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="IndexDocentes" asp-controller="Persona">Volver  </a>
             </div>

        </form>
    </div>
</div>


