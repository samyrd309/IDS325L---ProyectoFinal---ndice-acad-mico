@model IDS325L___ProyectoFinal___Índice_académico.Models.Persona
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="">
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Persona" method="post">
            <input type="hidden" asp-for="Matricula"/>

            
                <div class="mb-2"> 
                    <label class="form-label" asp-for="Nombre">Nombre</label>
                    <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled/>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="Apellido">Apellido</label>
                    <input class="form-control form-control-sm" asp-for="Apellido" type="text" disabled/>
                </div>
                
                <div class="mb-2"> 
                    <label class="form-label" asp-for="CodigoArea">Area Academica</label>
                    <select class="form-select form-select-sm" asp-for="CodigoAreaNavigation.CodigoArea" disabled>
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="Carrera">Carrera</label>
                    <select class="form-select form-select-sm" asp-for="CarreraNavigation.CodigoCarrera" disabled>
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="CorreoElectronico">Correo electronico</label >
                    <input class="form-control form-control-sm" asp-for="CorreoElectronico" type="text" disabled/>
                </div>
                <div class="mb-2"> 
                    <label class="form-label" asp-for="Contraseña">Contraseña</label>
                    <input class="form-control form-control-sm" asp-for="Contraseña" type="text" disabled/>
                </div>
            
           
            <div class="mb-2"> 
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexEstudiantes" asp-controller="Persona">Volver  </a>
             </div>

        </form>
    </div>
</div>

